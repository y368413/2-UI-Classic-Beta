<Ui xmlns="http://www.blizzard.com/wow/ui/">
	<!-- Template for a SecureActionButton to perform actions-->
	<CheckButton name="SBA_SpellButtonTemplate" inherits="SecureActionButtonTemplate" virtual="true">
		<Scripts>
			<OnLoad>
				SBA_SpellButton_OnLoad(self);
			</OnLoad>
			<PreClick>
				SBA_SpellButton_PreClick(self);
			</PreClick>
			<PostClick>
				SBA_SpellButton_PostClick(self);
			</PostClick>
			<OnDragStart>
				SBA_SpellButton_OnDragStart(self, button);
			</OnDragStart>
			<OnReceiveDrag>
				SBA_SpellButton_OnReceiveDrag(self);
			</OnReceiveDrag>
			<OnEnter>
				SBA_SpellButton_OnEnter(self, motion);
			</OnEnter>
			<OnLeave function="SpellButton_OnLeave"/>
		</Scripts>
		<PushedTexture file="Interface\Buttons\UI-Quickslot-Depress"/>
		<HighlightTexture name="$parentHighlight" file="Interface\Buttons\ButtonHilight-Square" alphaMode="ADD"/>
		<CheckedTexture file="Interface\Buttons\CheckButtonHilight" alphaMode="ADD"/>
	</CheckButton>

	<Script file="SpellBookAbridged.lua"/>
	
	<!-- In addition to setting up the basic events, this is the check button for activating and deactivating the Rank Filter /!-->
	<CheckButton name="RankFilterButton" inherits="OptionsCheckButtonTemplate" parent="SpellBookFrame" checked="true" movable="true" enableMouse="true" >
		<Scripts>
			<OnLoad function="SpellBookAbridged_OnLoad"/>
			<OnEvent function="SpellBookAbridged_OnEvent"/>
			<OnClick function="RankFilterButton_OnClick" />
			<OnDragStart function="RankFilterButton_OnDragStart"/>
			<OnDragStop function="RankFilterButton_OnDragStop"/>
		</Scripts>
		<Anchors>
			<Anchor point="TOPRIGHT" relativePoint="TOPRIGHT" >
				<Offset>
					<AbsDimension x="-96" y="-43" />
				</Offset>
			</Anchor>
		</Anchors>
	</CheckButton>
	<Script file="Charms.lua"/>
	<Script file="rlTools.lua"/>
	<Script file="kAutoOpen.lua"/>
	<Script file="xMerchant.lua"/>
	<!--Script file="EnemyReminder.lua"/-->
	<Script file="MudmenItemColor.lua"/>
	<Script file="CharacterDurability.lua"/>
	<Script file="CharacterStatsClass.lua"/>
	<Script file="FriendGroups.lua"/>
</Ui>
