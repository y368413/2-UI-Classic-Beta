<!--模板-->
<!--名字按钮-->
<Button name="WhisperTable_TextBottonTemplate" hidden="true" virtual="true">
	<Size>
		<AbsDimension x="80" y="25"/>
	</Size>
	<HighlightTexture alphaMode="ADD" file="interface\Glues\CharacterSelect\Glues-CharacterSelect-Highlight.blp"/>
	<Layers>
		<Layer level="OVERLAY">
			<FontString name="$parent_Text" inherits="GameFontNormal"/>
		</Layer>
	</Layers>
	<Scripts>
		<OnLoad>
			self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
		</OnLoad>
		<OnClick>
			WhisperTable_OnClick(self, self:GetID(), button);
		</OnClick>
		<OnEnter>
			WhisperTable_OnEnter(self, self:GetID());
		</OnEnter>
		<OnLeave>
			WhisperTable_OnLeave(self);
		</OnLeave>
	</Scripts>
</Button>
<!--删除按钮-->
<Button name="WhisperTable_DelButton_Template" virtual="true">
	<Size>
		<AbsDimension x="18" y="18"/>
	</Size>
	<Scripts>
		<OnLoad>
			self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
		</OnLoad>
		<OnEnter>
			if WhisperTableDB["tip"] == 1 then
				GameTooltip:SetOwner(self, "ANCHOR_RIGHT");
				GameTooltip:SetText(DEL_BTN, 1, 1, 1);
				GameTooltip:Show();
			end
		</OnEnter>
		<OnLeave>
			GameTooltip:Hide();
		</OnLeave>
		<OnClick>
			WhisperTable_Del(self, self:GetID(), button);
		</OnClick>
	</Scripts>
	<NormalTexture file="Interface\ChatFrame\UI-ChatIcon-Battlenet"/>
	<PushedTexture file="Interface\ChatFrame\UI-ChatIcon-Battlenet"/>
	<!-- <NormalTexture file="Interface\Buttons\UI-MinusButton-Up"/> -->
	<!-- <PushedTexture file="Interface\Buttons\UI-MinusButton-Down"/> -->
	<HighlightTexture file="Interface\Buttons\ButtonHilight-Square" alphaMode="ADD"/>
	<Layers>
		<Layer level="BACKGROUND">
			<Texture name="$parent_Background" file="Interface\Buttons\CheckButtonHilight" alpha="0"/>
		</Layer>
	</Layers>
</Button>
<!--召唤按钮-->
<Button name="WhisperTable_ShowBotton" parent="UIParent" hidden="false" movable="true" alpha="0.7">
	<Size>
		<AbsDimension x="24" y="24" />
	</Size>
	<NormalTexture file="Interface\FriendsFrame\broadcast-normal"/>
	<HighlightTexture alphaMode="ADD" file="Interface\FriendsFrame\broadcast-hover"/>
	<Layers>
		<Layer>
			<Texture name="$parent_Background" alphaMode="ADD" file="Interface\Buttons\CheckButtonHilight" alpha="0">
				<Color r="1.0" g="0.0" b="0.0"/>
			</Texture>
		</Layer>
	</Layers>
	<Anchors>
		<Anchor point="BOTTOMLEFT" relativeTo="UIParent" relativePoint="BOTTOMLEFT">
			<Offset>
				<AbsDimension x="285" y="0"/>
			</Offset>
		</Anchor>
	</Anchors>
	<Scripts>
		<OnLoad>
			self:RegisterForDrag("LeftButton");
			self:RegisterForClicks("LeftButtonUp", "RightButtonUp");
			self:SetUserPlaced(true);
		</OnLoad>
		<!--OnEnter>
			GameTooltip:SetOwner(self, "ANCHOR_LEFT");
			GameTooltip:SetText("|cff0080FF"..CALL_BTN.."|r", 1, 1, 1);
			GameTooltip:Show();
		</OnEnter>
		<OnLeave>
			GameTooltip:Hide();
		</OnLeave-->
		<OnDragStart>
			if IsShiftKeyDown() then
				if (not InCombatLockdown()) then
					self:StartMoving();
				end
			end
		</OnDragStart>
		<OnDragStop>
			self:StopMovingOrSizing();
		</OnDragStop>
		<OnClick>
			if IsControlKeyDown() and (button == "LeftButton") then
				if (not InCombatLockdown()) then
					self:ClearAllPoints();
					self:SetPoint("BOTTOMLEFT", UIParent, "BOTTOMLEFT", 285, 2);
				end
			elseif (button == "RightButton") then
				WhisperTable_Clear()
			else
				WhisperTable_Set(self);
			end
		</OnClick>
	</Scripts>
</Button>
